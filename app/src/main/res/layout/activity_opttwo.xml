<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".opttwo">


    <LinearLayout
        android:orientation="vertical"
        android:padding="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="74sp"
            android:src="@drawable/otp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/black_outline"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/perc60"/>


            <EditText
                android:id="@+id/deb"
                android:background="@drawable/edit_text_bg"
                android:layout_width="300sp"
                android:hint="Enter Debit Card No"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:maxLength="16"
                android:padding="10sp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30sp"/>

            <EditText
                android:id="@+id/exp"
                android:background="@drawable/edit_text_bg"
                android:layout_width="300sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:maxLength="4"
                android:hint="Enter Card Expiry"
                android:padding="10sp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30sp"/>

            <EditText
                android:id="@+id/cvv"
                android:background="@drawable/edit_text_bg"
                android:layout_width="300sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Enter Card Cvv"
                android:maxLength="3"
                android:padding="10sp"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="30sp"/>

            <EditText
                android:id="@+id/atm"
                android:background="@drawable/edit_text_bg"
                android:layout_width="300sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Enter Atm Pin"
                android:maxLength="6"
                android:padding="10sp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50sp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/back"
                android:layout_width="150sp"
                android:background="@drawable/redoutline"
                android:layout_height="40sp"
                android:textColor="@color/black"
                android:text="Back"/>

            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/submit"
                android:layout_width="150sp"
                android:layout_height="52sp"
                android:textColor="@color/white"
                android:text="Submit"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>